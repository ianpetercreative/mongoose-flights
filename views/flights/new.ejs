<%- include('../partials/header') %>

<h2>Enter New Flight Information</h2>

<form class="new-flight-form" action="/flights" method="POST">
    <label class="form-label">Airline: 
        <select name="airline">
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>    
    </label>

    <br />
    <br />
    
    <label class="form-label">Airport:
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN" selected>DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label>
    
    <br />
    <br />
    
    <label class="form-label">Flight Numbers (between 10-9999): 
        <input type="number" name="flightNo" min="10" max="9999" />
    </label>
    
    <br />
    <br />
    
    <label class="form-label">
        <input type="datetime-local" name="departs" />
    </label>
    
    <br />
    <br />

    <button class="form-button" type="submit">Submit</button>
</form>


<%- include('../partials/footer') %>

